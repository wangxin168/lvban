/* pages/lvban/lvban.wxss */
@import "../fuyong/fuyong.wxss";
page{
  width:100%;
  height: 100%;
  background: #F5F5F5;
  /* position: fixed; */
  /* left:0; */
  /* top:0; */
  /* z-index: -1; */
}
.lv_title_box{
  display: flex;
  border-bottom: 19rpx solid #F5F5F5;
  background: #fff;
}
.lv_title_item{
  width: 50%;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color: #A4A4A4;
}
.lv_title_item text{
  display: inline-block;
  position: relative;
}
.lv_title_box .on{
  color: #404040;
}
.lv_title_box .on text::before{
  content: '';
  display: block;
  width:100%;
  height:6rpx;
  background: #EA4B34;
  position: absolute;
  left:0;
  bottom: 0;
}
.lv_cont_item{
  display: flex;
  background: #fff;
  height:200rpx;
  padding-top: 50rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
}
.lv_cont_left{
  width:16%;
  text-align: center;
}
.lv_cont_right{
  width:84%;
  font-size: 28rpx;
}
.lv_cont_right_info{
  display: flex;
  padding-right: 40rpx;
  justify-content: space-between;
}
.nick{
  font-size: 34rpx;
  color: #404040;
  margin-bottom: 38rpx;
}
.line{
  font-size: 28rpx;
  color: #EA4B34;
}
.mytime{
  font-size: 28rpx;
  color: #A1A1A1;
}
.lv_tx{
  width:67rpx;
  height:67rpx;
}
.xuanfu{
  position: fixed;
  bottom: 300rpx;
  right: 50rpx;
  width: 128rpx;
  height: 128rpx;
}
.wu_xianlu{
  width: 596rpx;
  height: 516rpx;
  display: block;
  margin: 100rpx auto;
}
.baise{
  width: 100%;
  height: 100%;
  position: fixed;
  background: white;
  z-index: -10;
  top: 0;
  left: 0;
}