/* pages/erwei_code/erwei_code.wxss */
@import "../fuyong/fuyong.wxss";
.ewm_header{
  display: flex;
  padding:28rpx;
  box-sizing: border-box;
  background: #F2F2F2;
}
.ewm_header_left_img{
  width:97rpx;
  height:97rpx;
}
.ewm_header_right{
  padding-left: 28rpx;
  font-size: 33rpx;
  color: #333;
}
.tuijian{
  font-size:32rpx;
  color: #8D8D8D;
  margin-top: 10rpx;
}
.ewm_bg{
  padding: 20rpx 28rpx;
}
.ewm_bg_img{
  width: 694rpx;
  height:681rpx;
}
.ewm_cont{
  display: flex;
  padding: 20rpx 28rpx 35rpx 28rpx;
  justify-content: space-between;
  font-size: 32rpx;
  line-height: 45rpx;
}
.myewm_img{
  width:182rpx;
  height: 182rpx;
}
.ewm_text_top{
  margin-top: 20rpx;
}
.ewm_text_bottom{
  color: #A1A1A1;
}
.yaoqing_btn{
  width:100%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  color: #fff;
  background: #EA4B34;
  font-size: 32rpx;
  position: fixed;
  left:0;
  bottom: 0;
}
/* canvas */
.my_canvas{
  width:750rpx;
  height:1100rpx;
  background: #fff;
}
.canvas_box{
  padding-bottom: 110rpx;
  position: fixed;
  width:100%;
  height: 1100rpx;
  left:-100%;
  top:-1100rpx;
}
.canvas_hide{
  width:0;
  height: 0;
  overflow: hidden;
}
.xuanfu{
  position: fixed;
  bottom: 300rpx;
  right: 50rpx;
  width: 128rpx;
  height: 128rpx;
}